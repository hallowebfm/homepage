<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <link rel="stylesheet" href="{{ '/template/css/bulma.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/template/css/index.css' | url }}">

    <link rel="stylesheet" href="{{ '/template/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/template/css/prism-diff.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://halloweb.tech/">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:image" content="https://halloweb.tech/template/img/dabaja.jpeg">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://halloweb.tech/">
    <meta property="twitter:title" content="{{ title or metadata.title }}">
    <meta property="twitter:description" content="{{ description or metadata.description }}">
    <meta property="twitter:image" content="https://halloweb.tech/template/img/dabaja.jpeg">

  </head>
  <body>

    {% include './header.njk' %}

    {{ content | safe }}

    <footer class="footer">
      <hr/>
      <div class="content has-text-centered">
        <p>
          hallowebfm - 2023 - <a href="{{ '/content/impressum.html' | url }}">Impressum</a>  - <a href="{{ '/content/datenschutz.html' | url }}">DatenschutzerklÃ¤rung</a>
        </p>
      </div>
    </footer>

    {% set js %}
    {% include "template/js/menu.js" %}
    {% endset %}
    <script>
      {{ js | jsmin | safe }}
    </script>

  </body>
</html>